
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Clientes</h2>

@Html.ActionLink("Crear Cliente", "Create",null,new { @class = "btn btn-primary"})

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>NIT</th>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itm in ViewBag.lstClientes) {
            <tr>
                <td>@itm.nit</td>
                <td>@itm.nombre</td>
                <td>@itm.direccion</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

