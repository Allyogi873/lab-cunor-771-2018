
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Plantilla/default.cshtml";
}
@using PagedList.Mvc;
@using PagedList;

<h2>Blog de Ingeniería</h2>

@foreach (var itm in ViewBag.pagina) {
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">@itm.titulo</h2>
                    <p class="card-text">@Html.Raw(itm.contenido)</p>
                    <a href="https://bootsnipp.com/fullscreen/6Xa15" class="btn btn-primary">Leer más →</a>
                </div>
                <div class="card-footer text-muted">
                    Creado @itm.fec_creacion por
                    <a href="#">@itm.autor</a>
                </div>
            </div>
        </div>
        
    </div>
}

@Html.PagedListPager((IPagedList)ViewBag.pagina, page => Url.Action("Index", new { page = page }))